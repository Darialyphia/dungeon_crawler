{
  "ts-node": {
    "files": true
  },
  "include": [
    "src/**/*.ts",
    "tsup.config.ts",
    "src/commands/setup.js",
    "src/constants.js",
    "src/gui.js",
    "src/index.js"
  ],
  "exclude": [".git", "node_modules"],
  "compilerOptions": {
    "ignoreDeprecations": "5.0",
    "outDir": "dist",
    "target": "es2016",
    "module": "ES2022",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true
  }
}
