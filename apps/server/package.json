{
  "name": "@dungeon-crawler/server",
  "license": "MIT",
  "version": "0.1.0",
  "main": "src/index.ts",
  "scripts": {
    "predev": "yarn db:sync && yarn db:seed",
    "dev": "dotenv -c -- cross-env NODE_ENV=development tsx watch src/index.ts",
    "type-check": "tsc --noEmit -p tsconfig.json",
    "build": "esbuild src/index.ts --platform=node --bundle  --outfile=dist/index.js",
    "prebuild": "npm run type-check",
    "start": "cross-env NODE_ENV=production node dist/index.js",
    "test": "cross-env vitest",
    "prisma": "dotenv -c -- prisma",
    "db:sync": "yarn prisma generate && yarn prisma db push",
    "db:migrate": "dotenv -c -- prisma migrate dev",
    "db:ui": "dotenv -c -- prisma studio",
    "db:seed": "dotenv -c -- prisma db seed",
    "db:start": "docker-compose up -d",
    "db:stop": "docker-compose down",
    "db:reset": "docker-compose down -v"
  },
  "prisma": {
    "seed": "ts-node --compiler-options {\"module\":\"CommonJS\"} --transpile-only prisma/seed.ts"
  },
  "dependencies": {
    "@babakness/exhaustive-type-checking": "^0.1.3",
    "@casl/ability": "^6.5.0",
    "@casl/prisma": "^1.4.0",
    "@dungeon-crawler/shared": "*",
    "@dungeon-crawler/contract": "*",
    "@prisma/client": "5",
    "@ts-rest/core": "^3.26.3",
    "@ts-rest/express": "^3.25.1",
    "@ts-rest/open-api": "^3.26.3",
    "@types/bcrypt": "^5.0.0",
    "@types/cookie-parser": "^1.4.3",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/uuid": "^9.0.2",
    "awilix": "^8.0.1",
    "bcrypt": "^5.1.0",
    "body-parser": "^1.20.2",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "fp-ts": "^2.16.0",
    "fp-ts-std": "^0.17.1",
    "jsonwebtoken": "^9.0.1",
    "lodash": "^4.17.21",
    "monocle-ts": "^2.3.13",
    "nanoid": "^4.0.2",
    "prisma-error-enum": "^0.1.3",
    "socket.io": "^4.7.1",
    "socket.io-client": "^4.7.1",
    "swagger-ui-express": "^5.0.0",
    "ts-node": "^10.9.1",
    "typed-emitter": "^2.1.0",
    "uuid": "^9.0.0",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/body-parser": "^1.19.2",
    "@types/compression": "^1.7.2",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.12",
    "@types/dotenv": "^8.2.0",
    "@types/email-templates": "^10.0.1",
    "@types/express": "^4.17.14",
    "@types/helmet": "^4.0.0",
    "@types/jsonwebtoken": "^9.0.0",
    "@types/mapbox__geojson-area": "^0.2.1",
    "@types/mongodb-memory-server": "^2.3.0",
    "@types/morgan": "^1.9.4",
    "@types/nanoid": "^3.0.0",
    "@types/node": "^18.11.8",
    "@types/nodemailer": "^6.4.7",
    "@types/nodemailer-sendgrid": "^1.0.0",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^5.41.0",
    "@typescript-eslint/parser": "^5.41.0",
    "cross-env": "^7.0.3",
    "dotenv-cli": "^6.0.0",
    "esbuild": "^0.17.0",
    "eslint": "^8.26.0",
    "eslint-config-dungeon-crawler": "*",
    "prisma": "5",
    "tsx": "^3.12.5",
    "typescript": "^5.0.4",
    "vitest": "^0.29.3"
  }
}
